<%- include ('partials/header') -%>

<nav class="navbar navbar-default navbar-expand-lg">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">Playground App</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-link"><a href="/">Log In</a></li>
                <li class="nav-link"><a href="/">Sign Up</a></li>
                <li class="nav-link"><a href="/">Log Out</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to</h1>
        <p>This is a short subtitle</p>
        <p>
            <a class="btn btn-danger btn-lg" href="/playgrounds/new">Add New Playground</a>
        </p>
    </div>
</header>

<div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <div class="col-lg-12">
        <h3>Most Popular Playgrounds</h3>
    </div>

    <% playgrounds.forEach(function(playground) { %>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <img src="<%= playground.image %>" alt="<%= playground.name %> Image">
                <div class="caption">
                    <h4><%= playground.name %></h4>
                </div>
            </div>
        </div>
    <% }) %>

</div.>

<a href="/playgrounds/new">Add New Playground</a>

</div>

<%- include ('partials/footer') -%>