<%- include ('../partials/header') -%>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="form-heading text-center">New Playground</h1>
        </div>
        <div class="col-12">
            <form action="/playgrounds" method="POST">
                <div class="form-group">
                    <input id="input" class="form-control" type="text" name="playgroundName" placeholder="name">
                </div>
                <div class="form-group">
                    <input id="input" class="form-control" type="text" name="playgroundImg" placeholder="image url">
                </div>
                <div class="form-group">
                    <input id="input" class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-lg btn-rounded add-btn">Submit</button>
                </div>
            </form>
            <a class="back-btn" href="/playgrounds"><i class="fas fa-arrow-left"></i></a>
        </div>
    </div>
</div>

<%- include ('../partials/footer') -%>