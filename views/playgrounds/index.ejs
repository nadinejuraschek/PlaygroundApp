<%- include ('../partials/header') -%>

<div class="container">

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to</h1>
        <p>This is a short subtitle</p>
        <p>
            <a class="btn btn-danger btn-lg" href="/playgrounds/new">Add New Playground</a>
        </p>
    </div>
</header>

<div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <div class="col-lg-12">
        <h3>Most Popular Playgrounds</h3>
    </div>

    <% playgrounds.forEach(function(playground) { %>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <img src="<%= playground.image %>" alt="<%= playground.name %> Image">
                <div class="caption">
                    <h4><%= playground.name %></h4>
                </div>
                <p>
                    <a href="/playgrounds/<%= playground._id %>" class="btn btn-danger">More Info</a>
                </p>
            </div>
        </div>
    <% }) %>

</div.>

<a href="/playgrounds/new">Add New Playground</a>

</div>

<%- include ('../partials/footer') -%>