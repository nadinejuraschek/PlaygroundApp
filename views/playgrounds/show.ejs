<%- include ('../partials/header') -%>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">App Title</p>
            <div class="list-group">
                <li class="list-group-item active">Info</li>
                <li class="list-group-item">Info</li>
                <li class="list-group-item">Info</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="img-responsive" src="<%= playground.image %>">
                <div class="caption">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a href="#"><%= playground.name %></a></h4>
                    <p><%= playground.description %></p>
                    <p>
                        <em>Submitted by <%= playground.author.username %></em>
                    </p>
                    <a href='/playgrounds/<%= playground._id %>/edit' class='btn btn-warning'>Edit</a>
                    <form id="delete-form" action='/playgrounds/<%= playground._id %>?_method=DELETE' method='POST'>
                        <button class='btn btn-primary'>Delete</button>
                    </form>
                </div>
            </div>
            <div class="card bg-faded">
                <div class="text-right">
                    <a class="btn btn-success" href="/playgrounds/<%= playground._id %>/comments/new">Add a Comment</a>
                </div>
                <hr>
                <% playground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p><% comment.description %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<%- include ('../partials/footer') -%>