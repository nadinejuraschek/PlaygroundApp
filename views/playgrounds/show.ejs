<%- include ('../partials/header') -%>

<div class="container show-page">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <li class="list-group-item active">Info</li>
                <li class="list-group-item">Location - Coming Soon</li>
                <li class="list-group-item">Features - Coming Soon</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card detail-card">
                <img class="img-responsive" src="<%= playground.image %>">
                <div class="card-body">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4><a href="#"><%= playground.name %></a></h4>
                    <p><%= playground.description %></p>
                    <p>
                        <em>Submitted by <%= playground.author.username %></em>
                    </p>

                    <% if(currentUser && playground.author.id.equals(currentUser._id)) { %>
                        <a href='/playgrounds/<%= playground._id %>/edit' class='btn btn-warning'>Edit</a>
                        <form class="delete-form" action='/playgrounds/<%= playground._id %>?_method=DELETE' method='POST'>
                            <button class='btn btn-rounded btn-md'>Delete</button>
                        </form>
                    <% } %>

                </div>
            </div>
            <div class="card detail-card space-top card-body">
                <div class="text-right">
                    <a class="btn btn-success" href="/playgrounds/<%= playground._id %>/comments/new">Add a Comment</a>
                </div>
                <hr>
                <% playground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="float-right">10 days ago</span>
                            <p><%= comment.text %></p>

                            <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                                <a class="btn btn-warning" href="/playgrounds/<%= playground._id %>/comments/<%= comment._id %>/edit">
                                    Edit
                                </a>
                                <form class="delete-form" action="/playgrounds/<%= playground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <button class='btn btn-primary'>Delete</button>
                                </form>
                            <% } %>
                            
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<%- include ('../partials/footer') -%>